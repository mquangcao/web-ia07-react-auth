{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "quoteProps": "as-needed",
  "useTabs": false,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrderParserPlugins": [
    "typescript",
    "classProperties",
    "decorators-legacy",
    "jsx"
  ],
  "importOrder": ["^@(nestjs|app)/", "^[a-zA-Z]", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}